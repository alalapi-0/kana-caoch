/*
 * 迷你柱状图样式：通过卡片化容器与相对定位实现加载态提示。
 */
.mini-bars {
  position: relative;
  padding: 24rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
}

.mini-bars__title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.mini-bars__canvas {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
}

.mini-bars__placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #6b7280;
  background: rgba(255, 255, 255, 0.88);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
}
