.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 36rpx;
  display: block;
}

.card-desc {
  color: #666666;
  font-size: 28rpx;
  margin-top: 12rpx;
  display: block;
}
