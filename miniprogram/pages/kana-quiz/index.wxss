.question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.kana {
  font-size: 72rpx;
  font-weight: bold;
}

.progress {
  color: #888888;
}

.answer {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.history {
  margin-top: 40rpx;
}

.history-title {
  font-weight: bold;
  margin-bottom: 16rpx;
}

.history-item {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.complete {
  color: #999999;
  margin-bottom: 24rpx;
}
