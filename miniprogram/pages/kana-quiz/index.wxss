/*
 * 五十音测验样式：以卡片形式突出题目区域，底部展示结果列表。
 */
.quiz-page {
  padding: 40rpx;
  background: linear-gradient(180deg, #fef2f2 0%, #fee2e2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.quiz-header {
  margin-bottom: 24rpx;
}

.quiz-card {
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(248, 113, 113, 0.2);
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.quiz-kana {
  font-size: 64rpx;
  font-weight: 700;
  text-align: center;
  color: #b91c1c;
}

.quiz-kana--complete {
  color: #15803d;
}

.quiz-hint {
  text-align: center;
  color: #7f1d1d;
  font-size: 26rpx;
}

.quiz-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(248, 113, 113, 0.16);
  margin-bottom: 32rpx;
}

.quiz-actions {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.quiz-results {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
}

.quiz-results__title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #0f172a;
}

.quiz-result-card {
  padding: 24rpx 0;
  border-bottom: 1px solid #f1f5f9;
}

.quiz-result-card:last-child {
  border-bottom: none;
}

.quiz-result-meta {
  display: flex;
  justify-content: space-between;
  color: #64748b;
  font-size: 24rpx;
  margin: 12rpx 0;
}
