/* 五十音测验页面样式：突出题目与反馈信息 */
.container {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress {
  font-size: 28rpx;
  color: #666;
}

.question-card {
  background: #ffffff;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.kana {
  font-size: 60rpx;
  font-weight: bold;
}

.hint {
  margin-top: 16rpx;
  color: #888;
  font-size: 28rpx;
}

.input {
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.result {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.result-title {
  font-weight: bold;
  margin-bottom: 12rpx;
}

.result-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
