<!--
  设置页面：以 Vant Form 呈现语速/音色/自动播放/后端地址配置。
  语速与音色通过操作表选择，避免引入额外 Picker 组件。
-->
<view class="settings-page">
  <van-form bindsubmit="onSubmit">
    <view class="settings-card">
      <view class="settings-title">语音合成设置</view>
      <van-cell title="播音人" value="{{voiceOptions[voiceIndex]}}" is-link="true" bindtap="pickVoice" />
      <van-cell title="语速" value="{{speedOptions[speedIndex]}}" is-link="true" bindtap="pickSpeed" />
      <van-cell title="自动播放示例" border="false">
        <van-switch slot="right-icon" checked="{{autoPlay}}" bind:change="onAutoPlayChange" size="24" />
      </van-cell>
    </view>

    <view class="settings-card">
      <view class="settings-title">服务端配置</view>
      <van-field
        label="Mock 服务地址"
        value="{{baseUrl}}"
        placeholder="例如：http://localhost:3000"
        bind:change="onBaseUrlInput"
        border="false"
      />
      <view class="settings-hint">请在联调前确认服务端已运行并允许本地访问。</view>
    </view>

    <van-button type="primary" round="true" block="true" form-type="submit">保存设置</van-button>
  </van-form>

  <van-toast id="van-toast" />
</view>
