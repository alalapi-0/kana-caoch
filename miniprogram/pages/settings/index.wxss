/* 设置页样式：分块展示各项配置 */
.container {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.label {
  font-weight: bold;
}

.picker-value {
  padding: 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
}

.input {
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tip {
  color: #888;
  font-size: 26rpx;
}
