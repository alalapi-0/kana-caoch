/*
 * 设置页样式：保持卡片结构与柔和色彩，提升操作聚焦度。
 */
.settings-page {
  padding: 40rpx;
  background: linear-gradient(180deg, #fdf2f8 0%, #fce7f3 100%);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.settings-card {
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 36rpx rgba(244, 114, 182, 0.2);
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.settings-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #831843;
}

.settings-hint {
  font-size: 24rpx;
  color: #9d174d;
  background: #fdf2f8;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
}
