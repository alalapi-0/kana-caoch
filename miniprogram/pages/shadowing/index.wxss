/* 跟读训练页面样式：强调句子与录音反馈 */
.container {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.sentence {
  background: #ffffff;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.jp {
  font-size: 36rpx;
  font-weight: bold;
}

.hint {
  color: #888888;
}

.result {
  margin-top: 32rpx;
  background: #ffffff;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
