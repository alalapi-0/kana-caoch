/*
 * 跟读训练样式：采用渐变背景与圆角卡片，强调操作区域。
 */
.shadowing-page {
  padding: 40rpx;
  background: linear-gradient(180deg, #eef2ff 0%, #e0e7ff 100%);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.sentence-card {
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 44rpx rgba(129, 140, 248, 0.25);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.sentence-extra {
  background: #f1f5f9;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #334155;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.sentence-actions {
  display: flex;
  gap: 16rpx;
}

.record-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(55, 65, 81, 0.15);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-meta {
  display: flex;
  gap: 16rpx;
}

.result-actions {
  display: flex;
  justify-content: flex-end;
}
